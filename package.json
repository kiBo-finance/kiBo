{
  "name": "kibo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "waku dev --host 0.0.0.0 --port 3000",
    "build": "NODE_OPTIONS=\"--import ./prisma-resolver-hook.mjs\" waku build",
    "start": "NODE_OPTIONS=\"--import ./prisma-resolver-hook.mjs\" waku start --port 3000",
    "dev:next": "WATCHPACK_POLLING=true next dev --hostname 0.0.0.0",
    "build:next": "next build",
    "start:next": "next start",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "bun prisma/seed.ts",
    "db:studio": "prisma studio --hostname 0.0.0.0",
    "services:start": "chmod +x ./scripts/start-services.sh && ./scripts/start-services.sh",
    "services:stop": "chmod +x ./scripts/stop-services.sh && ./scripts/stop-services.sh",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dinero.js/currencies": "^2.0.0-alpha.1",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.15.0",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "better-auth": "^1.3.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "jotai": "^2.13.1",
    "lucide-react": "^0.542.0",
    "next": "15.1.0",
    "prisma": "^6.15.0",
    "react": "^19.0.0",
    "react-aria-components": "^1.14.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "waku": "^1.0.0-alpha.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "happy-dom": "^20.3.0",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "unrs-resolver"
  ]
}
