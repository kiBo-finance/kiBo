# DevContainerå°‚ç”¨Dockerfile (Bun)
FROM oven/bun:1

# Install essential development tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    bash \
    openssh-client \
    postgresql-client \
    redis-tools \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
ARG USERNAME=bun
ARG USER_UID=1000
ARG USER_GID=1000

# Configure sudo for the user
RUN echo "$USERNAME ALL=(root) NOPASSWD:ALL" > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# Set working directory and fix ownership
WORKDIR /app
RUN chown -R $USERNAME:$USERNAME /app

# Switch to non-root user early
USER $USERNAME

# Copy package files (from parent directory)
COPY --chown=$USERNAME:$USERNAME ../package.json ../bun.lock ./

# Install dependencies as bun user
RUN bun install --frozen-lockfile

# Install global development tools (as root, then switch back)
USER root
RUN bun install -g \
    prisma \
    @biomejs/biome
USER $USERNAME

# Copy source code (from parent directory)
COPY --chown=$USERNAME:$USERNAME ../ .

# Generate Prisma client
RUN bunx prisma generate

# Create and set permissions for .next directory
RUN mkdir -p /app/.next && chown -R $USERNAME:$USERNAME /app/.next

# Switch to root to create welcome script
USER root
# Create welcome script
RUN echo '#!/bin/bash\n\
echo "ðŸš€ kiBoã‚¢ãƒ—ãƒª DevContainer Ready! (Bun)"\n\
echo ""\n\
echo "Available commands:"\n\
echo "  bun run dev          - Start development server (port 3000)"\n\
echo "  bun test             - Run tests"\n\
echo "  bun run lint         - Check code quality"\n\
echo "  bun run db:push      - Push database schema"\n\
echo "  bun run db:studio    - Open Prisma Studio manually"\n\
echo "  bun run services:start - Start background services"\n\
echo "  bun run services:stop  - Stop background services"\n\
echo ""\n\
echo "Access URLs:"\n\
echo "  App:           http://localhost:3000"\n\
echo "  Prisma Studio: http://localhost:5555"\n\
echo ""' > /usr/local/bin/welcome.sh \
    && chmod +x /usr/local/bin/welcome.sh

# Set default shell
SHELL ["/bin/bash", "-c"]

# Switch back to non-root user for runtime
USER $USERNAME

# Default command
CMD ["sleep", "infinity"]
